class Solution {
    public int subarraySum(int[] nums, int k) {
        int result = 0;
        int sum = 0;
        Map<Integer, Integer> map = new HashMap<>();
        map.put(0, 1);
        int n = nums.length;

        for (int i = 0; i < n; i++) {
            sum += nums[i];  //find the cumulative sum

            if (map.containsKey(sum - k))  //checking whether it is previously stored in map or not
                result += map.get(sum - k);

            map.put(sum, map.getOrDefault(sum, 0) + 1);
        }

        return result;
    }
}
